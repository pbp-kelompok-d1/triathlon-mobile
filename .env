# =============================================================================
# Environment Configuration for Triathlon Mobile App
# =============================================================================
# This file contains environment-specific configuration variables.
# IMPORTANT: Add .env to .gitignore to prevent committing sensitive data!
#
# Usage:
#   1. Copy .env.example to .env for local development
#   2. Modify values as needed for your environment
#   3. Never commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Base URL for the Django backend API
# Development: http://10.0.2.2:8000 (Android Emulator) or http://127.0.0.1:8000 (iOS/Web)
# Production: https://muhammad-kaila-triathlon.pbp.cs.ui.ac.id
API_BASE_URL=https://muhammad-kaila-triathlon.pbp.cs.ui.ac.id

# Enable/disable production mode
# true = use production API, false = use local development server
USE_PRODUCTION=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable debug mode for additional logging
DEBUG_MODE=false

# Enable cache for forum posts (improves performance)
ENABLE_CACHE=true

# Cache duration in seconds (default: 5 minutes)
CACHE_DURATION_SECONDS=300

# -----------------------------------------------------------------------------
# Forum Module Configuration
# -----------------------------------------------------------------------------
# Maximum number of posts to load per page
FORUM_PAGE_SIZE=20

# Enable shimmer loading effect
ENABLE_SHIMMER_LOADING=true

# Debounce delay for search input (milliseconds)
SEARCH_DEBOUNCE_MS=300
